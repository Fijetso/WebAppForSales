<% include ../../partials/header %>
<div class="container">
    <h1>Add a page</h1>
    <a class="btn btn-primary" href="/admin/pages">Back to all pages</a>
    <div class="container-fluid">
        <form action="/admin/pages" method="POST">
            <div class="form-group">
                <label for="newPageTitle">Title</label>
                <input type="text" class="form-control"  placeholder="Title" name="pageTitle">
            </div>
            <div class="form-group">
                <label for="newPageSlug">Slug</label>
                <input type="text" class="form-control" placeholder="Slug" name="pageSlug">
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea class="ckeditor" name="pageContent"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-secondary">Submit</button>
        </form>
    </div>
    <% include ../../partials/footer %>